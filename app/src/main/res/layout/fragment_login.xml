<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgcate"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/asdf" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:hint="UserEmail"
                android:textAllCaps="true"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />


            <ProgressBar
                android:layout_width="50dp"
                android:id="@+id/progressBar"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/signin"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Sign up"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#9E2222" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="--------Login by another--------"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/google"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:backgroundTint="#821414"
                android:drawableLeft="@drawable/google"
                android:text="Sign up with Google"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#821414"
                android:drawableLeft="@drawable/facebook"
                android:text="Sign up with facebook"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changeFragment"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Click here to Create an Account.."
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />


        </LinearLayout>



    </LinearLayout>
</RelativeLayout>